<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.planboard.ui.news.NewsFragment"
        android:label="Berita"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_navigation_home_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.planboard.ui.plan.PlanFragment"
        android:label="Rencana"
        tools:layout="@layout/fragment_plan">
        <action
            android:id="@+id/action_navigation_dashboard_to_planNewFragment"
            app:destination="@id/planNewFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_planEditFragment"
            app:destination="@id/planEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.planboard.ui.balance.BalanceFragment"
        android:label="Keuangan"
        tools:layout="@layout/fragment_balance" />

    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.example.planboard.ui.news.NewsDetailFragment"
        android:label="Baca Berita"
        tools:layout="@layout/fragment_news_detail">
        <argument
            android:name="newsUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/planNewFragment"
        android:name="com.example.planboard.ui.plan.PlanNewFragment"
        android:label="Buat Rencana"
        tools:layout="@layout/fragment_plan_new">
        <argument
            android:name="newId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/planEditFragment"
        android:name="com.example.planboard.ui.plan.PlanEditFragment"
        android:label="Ubah Rencana"
        tools:layout="@layout/fragment_plan_edit">
        <argument
            android:name="planEdit"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>